generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ATTENDANT
  DOCTOR
}

enum ExamStatus {
  PENDING
  PROCESSING
  DONE
  ERROR
  REPORTED
}

model User {
  id    String   @id @default(uuid())
  email String   @unique
  name  String
  password String 
  role  UserRole @default(ATTENDANT) 
    
  @@map("users")
}

model MedicalExam {
  id                String     @id @default(uuid())
  title             String     
  imagePath         String 
  status            ExamStatus @default(PENDING) 
  processingResult  String? 
  report            String?
  createdAt         DateTime   @default(now())
  
  @@map("medical_exams")
}